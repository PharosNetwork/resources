{
  "build_root": "../",
  "chain_id": "aldaba_mvp",
  "domain_label": "domain0",
  "version": "2.0.0-rc1",
  "run_user": "admin",
  "deploy_dir": "/tmp/aldaba_mvp/domain0",
  "genesis_conf": "../conf/genesis.conf",
  "secret": {
    "domain": {
      "key_type": "prime256v1"
    },
    "client": {
      "key_type": "prime256v1"
    }
  },
  "docker": {
    "enable": true,
    "registry": "registry-vpc.cn-shanghai.aliyuncs.com/aldaba/aldaba",
    "image": "aldaba"
  },
  "common": {
    "env": {
    },
    "log": {
      "aldaba": {
        "filename": "../log/aldaba.log",
        "max_file_size": 209715200,
        "max_files": 50,
        "level": "info",
        "flush": true
      }
    },
    "config": {
      "metrics": {
        "enable_pamir_cetina": false,
        "pamir_cetina_push_address": "metrics.antchain.dl.alipaydev.com",
        "pamir_cetina_job_name": "aldaba_ng_job"
      }
    }
  },
  "cluster": {
    "light": {
      "service": "light",
      "ip": "127.0.0.1",
      "args": ["-d"],
      "env": {
        "CLIENT_LISTEN_URLS": "tls://0.0.0.0:18000",
        "CLIENT_ADVERTISE_URLS": "tls://127.0.0.1:18000",
        "DOMAIN_LISTEN_URLS": "tcp://0.0.0.0:19000",
        "LIGHT_RPC_LISTEN_URL": "0.0.0.0:19001",
        "LIGHT_RPC_ADVERTISE_URL": "127.0.0.1:19001",
        "PORTAL_UUID": "10",
        "TXPOOL_PARTITION_LIST": "0-255"
      }
    }
  }
}
