{
  "build_root": "../",
  "chain_id": "aldaba_mvp",
  "domain_label": "domain0",
  "version": "2.0.0-rc1",
  "run_user": "admin",
  "deploy_dir": "/tmp/aldaba_mvp/domain0",
  "genesis_conf": "../conf/genesis.conf",
  "secret": {
    "domain": {
      "key_type": "prime256v1"
    },
    "client": {
      "key_type": "prime256v1"
    }
  },
  "docker": {
    "enable": false,
    "registry": "registry-vpc.cn-shanghai.aliyuncs.com/aldaba"
  },
  "storage": {
    "auto_sharding_kvdbs": ["replay_db", "signed_tx_db", "kvdb"]
  },
  "common": {
    "env": {
    },
    "log": {
      "aldaba": {
        "filename": "../log/aldaba.log",
        "max_file_size": 209715200,
        "max_files": 50,
        "level": "info",
        "flush": true
      }
    },
    "config": {
      "metrics": {
        "enable_pamir_cetina": false,
        "pamir_cetina_push_address": "metrics.antchain.dl.alipaydev.com",
        "pamir_cetina_job_name": "aldaba_ng_job"
      }
    }
  },
  "cluster": {
    "etcd0": {
      "service": "etcd",
      "ip": "127.0.0.1",
      "args": ["1>stderr 2>stdout &"],
      "env": {
        "ETCD_NAME": "etcd0",
        "ETCD_DATA_DIR": "../data/etcd",
        "ETCD_LOG_OUTPUTS": "../log/etcd.log",
        "ETCD_INITIAL_CLUSTER": "etcd0=http://127.0.0.1:39000",
        "ETCD_ENABLE_V2": "true",
        "ETCD_INITIAL_ADVERTISE_PEER_URLS": "http://127.0.0.1:39000",
        "ETCD_LISTEN_PEER_URLS": "http://127.0.0.1:39000",
        "ETCD_LISTEN_CLIENT_URLS": "http://127.0.0.1:29000",
        "ETCD_ADVERTISE_CLIENT_URLS": "http://127.0.0.1:29000"
      }
    },
    "storage0": {
      "service": "storage",
      "ip": "127.0.0.1",
      "args": ["-c ../conf/svc.conf", "-d"],
      "env": {
        "STORAGE_ID": "0",
        "STORAGE_RPC_LISTEN_URL": "0.0.0.0:58000",
        "STORAGE_RPC_ADVERTISE_URL": "127.0.0.1:58000",
        "STORAGE_MSU": "0-127"
      }
    },
    "storage1": {
      "service": "storage",
      "ip": "127.0.0.1",
      "args": ["-c ../conf/svc.conf", "-d"],
      "env": {
        "STORAGE_ID": "1",
        "STORAGE_RPC_LISTEN_URL": "0.0.0.0:58001",
        "STORAGE_RPC_ADVERTISE_URL": "127.0.0.1:58001",
        "STORAGE_MSU": "128-255"
      }
    },
    "portal0": {
      "service": "portal",
      "ip": "127.0.0.1",
      "args": ["-s portal", "-d"],
      "env": {
        "PORTAL_ID": "0",
        "PORTAL_UUID": "10",
        "PORTAL_RPC_LISTEN_URL": "0.0.0.0:18009",
        "PORTAL_RPC_ADVERTISE_URL": "127.0.0.1:18009",
        "CLIENT_LISTEN_URLS": "tls://0.0.0.0:18000",
        "CLIENT_ADVERTISE_URLS": "tls://127.0.0.1:18000"
      }
    },
    "portal1": {
      "service": "portal",
      "ip": "127.0.0.1",
      "args": ["-s portal", "-d"],
      "env": {
        "PORTAL_ID": "1",
        "PORTAL_UUID": "11",
        "PORTAL_RPC_LISTEN_URL": "0.0.0.0:18019",
        "PORTAL_RPC_ADVERTISE_URL": "127.0.0.1:18019",
        "CLIENT_LISTEN_URLS": "wss://0.0.0.0:18002",
        "CLIENT_ADVERTISE_URLS": "wss://127.0.0.1:18002"
      }
    },
    "dog": {
      "service": "dog",
      "ip": "127.0.0.1",
      "args": ["-s dog", "-d"],
      "env": {
        "DOG_RPC_LISTEN_URL": "0.0.0.0:49000",
        "DOG_RPC_ADVERTISE_URL": "127.0.0.1:49000",
        "DOMAIN_LISTEN_URLS": "tcp://0.0.0.0:19000"
      }
    },
    "txpool0": {
      "service": "txpool",
      "ip": "127.0.0.1",
      "args": ["-s txpool", "-d"],
      "env": {
        "TXPOOL_ID": "0",
        "TXPOOL_RPC_LISTEN_URL": "0.0.0.0:28000",
        "TXPOOL_RPC_ADVERTISE_URL": "127.0.0.1:28000",
        "TXPOOL_PARTITION_LIST": "0-127"
      }
    },
    "txpool1": {
      "service": "txpool",
      "ip": "127.0.0.1",
      "args": ["-s txpool", "-d"],
      "env": {
        "TXPOOL_ID": "1",
        "TXPOOL_RPC_LISTEN_URL": "0.0.0.0:28001",
        "TXPOOL_RPC_ADVERTISE_URL": "127.0.0.1:28001",
        "TXPOOL_PARTITION_LIST": "128-255"
      }
    },
    "controller": {
      "service": "controller",
      "ip": "127.0.0.1",
      "args": ["-s controller", "-d"],
      "env": {
        "CONTROLLER_RPC_LISTEN_URL": "0.0.0.0:38000",
        "CONTROLLER_RPC_ADVERTISE_URL": "127.0.0.1:38000"
      }
    },
    "compute0": {
      "service": "compute",
      "ip": "127.0.0.1",
      "args": ["-s compute", "-d"],
      "env": {
        "COMPUTE_ID": "0",
        "COMPUTE_RPC_LISTEN_URL": "0.0.0.0:48000",
        "COMPUTE_RPC_ADVERTISE_URL": "127.0.0.1:48000"
      }
    },
    "compute1": {
      "service": "compute",
      "ip": "127.0.0.1",
      "args": ["-s compute", "-d"],
      "env": {
        "COMPUTE_ID": "1",
        "COMPUTE_RPC_LISTEN_URL": "0.0.0.0:48001",
        "COMPUTE_RPC_ADVERTISE_URL": "127.0.0.1:48001"
      }
    }
  }
}
