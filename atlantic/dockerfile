FROM ubuntu:22.04

# Install minimal dependencies
RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /data

# Copy binaries to /data/bin
COPY bin /data/bin

# Copy VERSION file to bin directory
COPY VERSION /data/bin/VERSION

# Copy ops tool (will switch to download after ops repo is public)
COPY ops /data/ops
RUN chmod +x /data/ops && \
    chmod +x /data/bin/*

# Copy startup script
COPY docker-entrypoint.sh /data/docker-entrypoint.sh
RUN chmod +x /data/docker-entrypoint.sh

# Expose ports
EXPOSE 18100 18200 19000 20000

CMD ["/data/docker-entrypoint.sh"]
